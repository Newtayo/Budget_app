  <ul id="nav">
  <li><%= link_to "Back", users_path, class: "back" %></li>
  </ul>
  <h1 class ="login"> Categories</h1>
  <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "logout"  %>
